@model Sunny_House.Models.RelationTypesCatalog

@{
    ViewBag.Title = "Типы взаимоотношений - Создание";
}

<h2>Создание</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Справочник типов взаимоотношений</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RelType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RelType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RelType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TypeSex, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.TypeSex, "-Выберите пол-", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypeSex, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReverseRelType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReverseRelType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ReverseRelType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RevTypeSex, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.RevTypeSex, "-Выберите пол-", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RevTypeSex, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" title="Добавить новый тип" class="btn btn-default"><i class="glyphicon glyphicon-floppy-save"></i> Создать</button>
            </div>
        </div>
    </div>
}

<div>
    <p><a class="btn btn-default" href='@Url.Action("RTShow", "PersonRelations")'><span class="glyphicon glyphicon-circle-arrow-left"> Назад</span></a></p>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}