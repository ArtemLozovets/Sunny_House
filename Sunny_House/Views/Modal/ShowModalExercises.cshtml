<link href="~/Content/jquery.datetimepicker.min.css" rel="stylesheet" />
<div class="modal-content ui-front">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Занятия</h4>
    </div>
    <div class="row" style="margin:10px 0">
        <div class="col-lg-12 form-inline">
            @using (Ajax.BeginForm("ExercisesPartialList", "Modal", new { @field = @ViewBag.Mode, FilterDate = @ViewBag.FilterDate, FilterVisitor = @ViewBag.FilterVisitor, FilterEvent = @ViewBag.FilterEvent }, new AjaxOptions { UpdateTargetId = "update" }, new { @id = "modalform" }))
            {
                @Html.TextBox("ExerciseSearchString", null, new { @class = "form-control ", @placeholder = "Тема...", @style = "margin:2px 2px; width:180px; display:inline-block;" })
                @Html.TextBox("StartTimeS", null, new { @class = "form-control ", @placeholder = "Начало...", @style = "margin:2px 2px; width:140px; display:inline-block;" })
                @Html.TextBox("EndTimeS", null, new { @class = "form-control ", @placeholder = "Окончание...", @style = "margin:2px 2px; width:140px; display:inline-block;" })
                <button type="submit" title="Искать" style="margin:2px 2px; display:inline-block " class="btn btn-default"><i class="glyphicon glyphicon-search"></i> </button>
                <button type="button" title="Обновить" class="btn btn-default" id="filterclear"><i class="glyphicon glyphicon-refresh"></i></button>
            }
        </div>
    </div>
    <div id="update">
        @Html.Action("ExercisesPartialList", "Modal", new { ExerciseSearchString = "", field = @ViewBag.Mode, FilterDate = @ViewBag.FilterDate, FilterVisitor = @ViewBag.FilterVisitor, FilterEvent = @ViewBag.FilterEvent })
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#ExerciseSearchString').focus();

        $('#filterclear').click(function (event) {
            $('#modalform').trigger('reset');
            $('#modalform').submit();
        });

        $('#modDialog').on('shown.bs.modal', function () {
            $("#PersonSearchString").focus();
        })
    });

    function selsubmit(elem) {
        var ExId = $(elem).data('exid');
        var PasteItem = $(elem).data('pasteitem');
        var ExName = $(elem).data('exname');

        $("#" + PasteItem).val(ExId);

        if (PasteItem == 'ExerciseId') $("#ExLabel").val(ExName).trigger('change');
        $('#modDialog').modal('hide');
    };

</script>

@*Блок скриптов для работы с DateTimePicker*@
<script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>
<script type="text/javascript">

    $.datetimepicker.setLocale('ru');

    // <![CDATA[
    jQuery(function () {
        jQuery('#StartTimeS').datetimepicker({
            format: 'd/m/Y H:i',
            formatDate: 'd/m/Y',
            onShow: function (ct) {
                this.setOptions({
                    maxDate: jQuery('#EndTimeS').val() ? jQuery('#EndTimeS').val() : false
                })
            },
            timepicker: true
        });
        jQuery('#EndTimeS').datetimepicker({
            format: 'd/m/Y H:i',
            formatDate: 'd/m/Y',
            onShow: function (ct) {
                this.setOptions({
                    minDate: jQuery('#StartTimeS').val() ? jQuery('#StartTimeS').val() : false
                })
            },
            timepicker: true
        });
    });
    // ]]>

</script>

