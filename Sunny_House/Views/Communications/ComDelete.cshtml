@model Sunny_House.Models.Communication

@{
    ViewBag.Title = "Удаление";
}

<h2>@ViewBag.PersonName</h2>
<h3>Удаление средства связи</h3>

<h3 class="text-danger">Вы действительно хотите удалить выбранную запись?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TypeOfCommunication.CommType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TypeOfCommunication.CommType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address_Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address_Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CommName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CommName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Note)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a class="btn btn-default" href='@Url.Action("ComShow", "Communications", new {@PersonId = Request.Params["PersonId"]})'><span class="glyphicon glyphicon-circle-arrow-left"> Назад</span></a>
            <button type="submit" title="Удалить" class="btn btn-default"><i class="glyphicon glyphicon-trash"></i> Удалить</button>
        </div>
    }
</div>
