@model IEnumerable<Sunny_House.Models.TypeOfCommunication>

@{
    ViewBag.Title = "Виды связи - Список";
}

<h2>Виды связи</h2>

<div class="row">
    <div class="col-md-6">
        <p class="text-success"> @TempData["MessageOk"]</p>
        <p class="text-danger">  @TempData["MessageError"]</p>
    </div>
</div>

<p>
    @if (ViewData["CommPersonId"] != "-1")
    {
        <a class="btn btn-default" href='@Url.Action("ComCreate", "Communications", new { PersonId = ViewData["CommPersonId"] })'><span class="glyphicon glyphicon-circle-arrow-left"> Назад</span></a>
    }
    <a class="btn btn-default" style="margin:2px 2px;" title="Добавить новый тип" href='@Url.Action("TCCreate", "Communications")'><span class="glyphicon glyphicon-phone"> Создать</span></a>
</p>

<div class="row">
    <div class="col-md-5 col-sm-6 col-xs-7">
        <table class="table table-bordered table-striped table-responsive table-hover ReestrTable">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CommType)
                </th>
                <th style="width:46px; min-width:46px;"></th>
            </tr>

            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="2">
                        <p class="text-center text-danger" style="margin-top:12px;">Записи, соответствующие критериям поиска, не найдены<p>
                    </td>
                </tr>
            }


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommType)
                    </td>
                    <td style="text-align:center;">
                        <a class="btn btn-default btn-sm" title="Удаление вида связи" href='@Url.Action("TCDelete", "Communications", new { id = item.Id })'><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>