
@{
    ViewBag.Title = "Отчеты - Дни рождения";
}


<h2><i class="fa fa-birthday-cake" aria-hidden="true"></i>&nbsp;Дни рождения</h2>


<div ng-app="ui.bootstrap.module" style="margin-top:30px;">
    <div ng-controller="ui.bootstrap.ctrl">
        <accordion close-others="true">
            <accordion-group ng-repeat="x in numOfMonth" class="panel-default" ng-init="isOpen = $index == currentMonth ? true : false" is-open="isOpen">
                <accordion-heading>
                    {{x.header}} <i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': isOpen, 'glyphicon-chevron-right': !isOpen}"></i>
                </accordion-heading>
                
            </accordion-group>
        </accordion>

    </div>
</div>


@section Scripts {
    <script src="~/Scripts/angular-ui/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.13.0/ui-bootstrap-tpls.js"></script>
    <script>
        var app = angular.module('ui.bootstrap.module', ['ui.bootstrap']);
        app.controller('ui.bootstrap.ctrl', function ($scope) {
            $scope.numOfMonth = [
              { num: 1, header: "Январь" },
              { num: 2, header: "Февраль" },
              { num: 3, header: "Март" },
              { num: 4, header: "Апрель" },
              { num: 5, header: "Май" },
              { num: 6, header: "Июнь" },
              { num: 7, header: "Июль" },
              { num: 8, header: "Август" },
              { num: 9, header: "Сентябрь" },
              { num: 10, header: "Октябрь" },
              { num: 11, header: "Ноябрь" },
              { num: 12, header: "Декабрь" },
            ];

            var d = new Date();
            $scope.currentMonth = d.getMonth();
            
            $scope.openPanel = function (idx) {
                if (!$scope.groups[idx].open) {
                    alert('eee');
                    $scope.groups[idx].open = true;
                }
            };

        });
    </script>

    <script>
        $("body").on('show.bs.collapse', '.collapse', function () {
            alert('OPEN');
            AjaxLoadTasks($(this).attr('id'));
        });

        function AjaxLoadTasks(_id) {
            $('#loadingImg').show();
            $('#' + _id).delay(100).queue(function (nxt) {
                $('#' + _id + '>div').load('/Tasks/TasksGroupShow', { mode: _id }, function () {
                    $('#loadingImg').hide();
                });
                nxt();
            });
        }
    </script>
}

