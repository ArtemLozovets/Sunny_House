@model IEnumerable<Sunny_House.Models.PotentialСlient>

<table class="table table-bordered table-striped table-responsive table-hover ReestrTable" style="width:100%; margin:4px auto; ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Infoes)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4">
                <p class="text-center text-danger" style="margin-top:12px;">Записи, соответствующие критериям поиска, не найдены<p>
            </td>
        </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.EventName, "ResShowOfEvent", "Reserves", new { EventId = item.EventId }, new { target = "_self" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Infoes)
            </td>
            <td style="text-align:center; width:90px; min-width:90px;">
                <a class="btn btn-default btn-sm" title="Редактирование" href='@Url.Action("Edit", "PotentialClient", new { id = item.ClientId})'><span class="glyphicon glyphicon-edit"></span></a>
                <a class="btn btn-default btn-sm" title="Удаление" href='@Url.Action("Delete", "PotentialClient", new { id = item.ClientId })'><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>


