@model Sunny_House.Models.Comment

@{
    ViewBag.Title = "Удаление";
}

<h2><i class="fa fa-commenting fa-1x"></i> Отзывы</h2>

<h3>Вы действительно желаете удалить выбранную запись?</h3>
<div>
    <h4>Удаление отзыва</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Источник
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CommentSource.SourceName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

        @if (Model.AttListGetter.Count() > 0)
        {
            <dt><strong>Вложения</strong></dt>
            <dd>
                @foreach (var item in Model.AttListGetter)
                {
                    <span style="margin-right:10px;">
                        @Html.ActionLink(item.FileName, "GetFile", "Attachment", new { id = item.Id }, null)
                    </span>
                }
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt>
            Подпись
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Person1.FirstName)
        </dd>

        <dt>
            О персоне
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Person.FirstName)
        </dd>

        <dt>
            О мероприятии
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>

        <dt>
            О занятии
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Exercise.Subject)
        </dd>

        <dt>
            О месте
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address.Alias)
        </dd>
      
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a class="btn btn-default" href='@Url.Action("CommentShow", "Comments")'><span class="glyphicon glyphicon-circle-arrow-left"> Назад</span></a>
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-trash"> Удалить</i></button>
        </div>
    }
</div>
