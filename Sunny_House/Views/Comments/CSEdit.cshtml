@model Sunny_House.Models.CommentSource

@{
    ViewBag.Title = "Отзывы - Редактирование источника";
}

<h2>Отзывы</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Редактирование источника</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SourceId)

        <div class="form-group">
            @Html.LabelFor(model => model.SourceName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SourceName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SourceName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" title="Редактировать запись" class="btn btn-default"><i class="glyphicon glyphicon-floppy-save"></i> Обновить</button>
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-default" href='@Url.Action("CSShow", "Comments")'><span class="glyphicon glyphicon-circle-arrow-left"> Назад</span></a>
</div>
