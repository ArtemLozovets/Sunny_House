@model IEnumerable<Sunny_House.Models.Visit>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonFIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="2">
                <p class="text-center text-danger" style="margin-top:12px;">Записи, соответствующие критериям поиска, не найдены<p>
            </td>
        </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(@item.PersonFIO, "ShowPersons", "Home", new { PersonId = @item.VisitorId }, new { target = "_blank"})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                <a class="btn btn-default btn-sm"
                   title="Удалить"
                   href='@Url.Action("VisDelete", "Visits", new { VisitId = item.VisitId, ReturnUrl = "/Exercises/ExDetails?ObjectId="+@item.ExerciseId })'>
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>
