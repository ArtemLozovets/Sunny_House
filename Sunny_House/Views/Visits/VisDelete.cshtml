@model Sunny_House.Models.Visit

@{
    ViewBag.Title = "Посещения";
}

<h2><i class="fa fa-id-card-o"></i> Посещения</h2>

<h3 class="text-danger">Вы действительно хотите удалить выбранную запись?</h3>
<div>
    <h4>Удаление информации о посещении</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Занятие
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Exercise.Subject)
        </dd>

        <dt>
            ФИО персоны
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PersonRole.RoleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PersonRole.RoleName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a class="btn btn-default" href='@Url.Action("VisShow", "Visits")'><span class="glyphicon glyphicon-circle-arrow-left"> Назад</span></a>
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-trash"> Удалить</i></button>
        </div>
    }
</div>
