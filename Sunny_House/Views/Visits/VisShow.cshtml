@model IEnumerable<Sunny_House.Models.Visit>

@{
    ViewBag.Title = "Посещения";
}

<h2><i class="fa fa-id-card-o"></i> Посещения</h2>

<p>
    @Html.ActionLink("Добавить", "VisCreate")
</p>
<table class="table table-bordered table-striped table-responsive table-hover ReestrTable">
    <tr>
        <th>
            Занятие
        </th>
        <th>
            ФИО персоны
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonRole.RoleName)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4">
                <p class="text-center text-danger" style="margin-top:12px;">Записи, соответствующие критериям поиска, не найдены<p>
            </td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonRole.RoleName)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "VisEdit", new { VisitId = item.VisitId }) |
                @Html.ActionLink("Подробно", "VisDetails", new { VisitId = item.VisitId }) |
                @Html.ActionLink("Удалить", "VisDelete", new { VisitId = item.VisitId })
            </td>
        </tr>
    }

</table>
