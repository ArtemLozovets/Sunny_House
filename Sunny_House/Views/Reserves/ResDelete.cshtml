@model Sunny_House.Models.Reserve

@{
    ViewBag.Title = "Бронирования - Удаление";
}

<h2>@Model.Person.FirstName @Model.Person.LastName @Model.Person.MiddleName</h2>

<h3 class="text-danger">Вы действительно хотите удалить выбранную запись?</h3>
<div>
    <h4>Удаление бронирования</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Event.EventName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PersonRole.RoleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PersonRole.RoleName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Note)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a class="btn btn-default" href='@Url.Action("ResShow", "Reserves", new {PersonId = @Model.Person.PersonId })'><span class="glyphicon glyphicon-circle-arrow-left"> Назад</span></a>
            <button type="submit" title="Удалить бронирование" class="btn btn-default"><i class="glyphicon glyphicon-trash"></i> Удалить</button>
        </div>
    }
</div>
