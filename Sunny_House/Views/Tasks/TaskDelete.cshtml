@model Sunny_House.Models.STask

@{
    ViewBag.Title = "Удалить";
}

<h2>Задачи</h2>

<h3>Вы действительно хотите удалить выбранную запись?</h3>
<div>
    <h4>Удаление задачи</h4>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfCreation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfCreation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TaskComplete)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaskComplete)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Note)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("CurrentUser", @Context.User.Identity.Name)
        <div class="form-actions no-color">
            <a class="btn btn-default" href='@Url.Action("TasksShow", "Tasks")'><span class="glyphicon glyphicon-circle-arrow-left"> Назад</span></a>
            <button type="submit" title="Удалить задачу" class="btn btn-default"><i class="glyphicon glyphicon-trash"></i> Удалить</button>
        </div>
    }
</div>
